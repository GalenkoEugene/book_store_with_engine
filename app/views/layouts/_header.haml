%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand= t('header.logo')
      %a.shop-link.pull-right.visible-xs{href: "#{cart_path}"}
        %span.shop-icon= shop_icon_quantity(current_order)
    %a.shop-link.pull-right.hidden-xs{href: "#{cart_path}"}
      %span.shop-icon= shop_icon_quantity(current_order)
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to t('button.home'), root_path
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"}= t('header.shop')
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              = render 'layouts/categories'
          = log_in_up_helper
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('button.home'), root_path
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('header.shop')
            %ul.dropdown-menu
              = render 'layouts/categories'
          = log_in_up_helper
