%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to t('button.home'), main_app.root_path, class: 'nav-link'
          %li
            = link_to t('button.shop'), main_app.catalog_path, class: 'nav-link'
          %li
            = link_to t('button.orders'), cartify.orders_path, class: 'nav-link' if user_signed_in?
          %li
            = link_to t('button.settings'), main_app.settings_privacy_path, class: 'nav-link' if user_signed_in?
      .col-sm-3
        %p.general-nav-mail support@bookstore.com
        %p.general-nav-number (555)-555-5555
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-facebook{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-twitter{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-google-plus{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-instagram{'aria-hidden': "true"}
