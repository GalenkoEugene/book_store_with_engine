%h3= t('page.home.best_sellers')
.row
  - @best_sellers.each do |book|
    .col-sm-6.col-md-3
      .general-thumb-wrap
        .thumbnail.general-thumbnail
          = image_tag img_of(book), alt: book.title, class: 'img-shadow general-thumbnail-img'
          .thumb-hover
            .general-thumb-link-wrap
              = link_to book_path(book), class: 'thumb-hover-link' do
                %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
              = link_to order_items_path(order_item: {quantity: 1, book_id: book.id}), { method: :post, remote: true, class: 'thumb-hover-link' } do
                %i.fa.fa-shopping-cart.thumb-icon
      .mb-35
        .clearfix
          %p.pull-right.font-16.in-gold-500= number_to_currency(book.price)
          %p.title.mr-55= book.title
        %span.divider-sm
        %p.lead.small= authors_to_list(book)
